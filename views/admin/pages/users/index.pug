extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Danh sách tài khoản

    .card.mb-3
      .card-header Danh sách
      .card-body
        .row 
          .col-8
          .col-4.text.right
            
              a(
                href=`${preFixAdmin}/users/create`
                class="btn btn-outline-success"
              ) + Thêm mới

        table(
          class="table table-hover table-sm"
        )
          thead
            tr
              th STT
              th Avatar
              th Họ tên
              th Email
              th Mật khẩu
              th Trạng thái
              th Hành động

          tbody
            each item, index in records
              tr
                td #{index+1}
                
                td
                  img(
                    src=item.avatar
                    alt=item.fullName
                    width="100px"
                    height="auto"
                  )
                td #{item.fullName}
                
                td #{item.email}
                td #{item.passwword}
                
                td
                      
                  if(item.status === "active")
                      a(
                          href="javascript:;"
                          data-id=item.id
                          data-status=item.status
                          button-change-status
                          class="badge badge-success"
                      ) Hoạt động
                  else
                      a(
                          href="javascript:;"
                          data-id=item.id
                          data-status=item.status
                          button-change-status
                          class="badge badge-danger"
                      ) Dừng hoạt động
                    
                    
                td
                    a(
                        href=`${preFixAdmin}/user/detail/${item.id}`
                        class="btn btn-secondary btn-sm"
                    ) Chi tiết
                    
                        a(
                            href=`${preFixAdmin}/user/edit/${item.id}`
                            class="btn btn-warning btn-sm"
                        ) Sửa
                    
                        button(
                            class="btn btn-danger btn-sm ml-1"
                            button-delete
                            data-id=item.id
                        ) Xóa