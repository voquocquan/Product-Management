include ../mixins/sub-menu.pug

header.header 
    .container 
        .row.align-items-center 
            .col-3 
                .inner-logo     
                    a(href="/")
                        img(src="/images/seagame.png", alt="Logo")

            .col-3
                form(
                    action="/search"
                    method="GET"
                )
                    div(class="form-group d-flex mb-0")
                        input(
                            type="text"
                            placeholder="Nhập từ khoá..."
                            class="form-control"
                            name="keyword"
                            value=keyword
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                        )   Tìm

            .col-6
                .inner-menu     
                    ul 
                        li 
                            a(href="/") Trang chủ

                        li(class="sub-menu")
                            -const pathProduct = "/products";
                            a(href="/products") Sản phẩm
                                +sub-menu(layoutProductCategory, pathProduct)

                        li  
                            a(href="/cart") Giỏ hàng (#{ miniCart ? miniCart.totalQuantity : 0})

                        li  
                            a(href="/user/register") Đăng ký